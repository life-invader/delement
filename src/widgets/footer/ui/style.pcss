.footer {
  box-shadow: 0 -2px 10px 0 #0000001a;

  &__container {
    max-width: 1735px;
    margin: 0 auto;
    padding: 0 20px;
  }

  &__top {
    padding: 40px 0;
  }

  &__links-list {
    display: flex;
    gap: 40px;
  }

  &__link {
    text-transform: uppercase;
    font-size: 15px;
    font-weight: 600;
    transition: opacity 0.2s;

    &:hover {
      opacity: 0.6;
    }
  }

  &__policy {
    text-transform: none;
  }

  &__links-item:last-child {
    margin-left: auto;
  }

  &__bottom {
    padding: 34px 0 32px;
    position: relative;
  }

  &__bottom::before {
    content: '';
    position: absolute;
    top: 0;
    width: 100%;
    height: 1px;
    background-color: rgba(0, 0, 0, 0.3);
  }

  &__bottom-list {
    display: flex;
    gap: 56px;
  }

  &__bottom-term {
    font-size: 13px;
    line-height: 24px;
    color: #888;
  }

  &__bottom-def {
    font-size: 15px;
    font-weight: 600;
    line-height: 24px;
    color: #222;
  }
}
